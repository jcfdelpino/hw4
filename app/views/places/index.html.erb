<h1 class="text-decoration-underline">Places</h1>

<ul>
  <% if @current_user %>
    <% for place in @places %>
      <li><a href="/places/<%= place.id %>"><%= place.name %></a></li>
    <% end %>
  <% end %>
</ul>

<p>
<% if @current_user %>
  <a class="btn btn-success" href="/places/new">New Place</a>
<% end %>
</p>

