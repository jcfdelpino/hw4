<h1 class="text-decoration-underline" ><%= @place.name %></h1>

<div class = "row">
  <% for post in @place.posts.where({user_id: @current_user.id})  %>
    <div class = "col-sm-4">
      <h3><%= post.title %></h3>
      <h4><%= post.posted_on %></h4>
      <p><%= post.description %></p>
      
        <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
        <% end %>
    </div>
  <% end %>
</div>

<p class= "pt-4">
<% if @current_user %>
  <a class="btn btn-success" href="/posts/new?place_id=<%= @place.id %>">New Post</a>
<% end %>
</p>

<p>
  <a class = "btn btn-secondary btn-sm" href="/places">Back to All Places</a>
</p>




