<h1 class="text-decoration-underline">New Post</h1>

<%= form_with model: @post do |form| %>
  <p class = "pt-4">
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p>
  <p class = "pt-4">
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </p>
  <p class = "pt-4">
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </p>
  <p class = "pt-4">
    <%= form.submit "Create Post", class: "btn btn-primary btn-sm" %>
  </p>
  <%= form.hidden_field "place_id" %>
<% end %>
